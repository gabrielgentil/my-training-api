{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended",
  "moduleResolution": "NodeNext",
  "declaration": true
}